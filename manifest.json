{
  "manifest_version": 3,
  "name": "TheChannel Viewer for Gmail",
  "version": "3.0.0",
  "description": "מאפשר צפיה באתרי הערוץ מתוך ג'ימייל.",
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "cookies",
    "scripting",
    "webNavigation",
    "alarms"
  ],
  "host_permissions": [
    "https://mail.google.com/"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "service_worker/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "css": ["styles/gmail.css"],
      "js": [
        "content_scripts/state.js",
        "content_scripts/storage.js",
        "content_scripts/dom.js",
        "content_scripts/events.js",
        "content_scripts/main.js"
      ]
    },
    {
      "matches": [
        "https://thechannel-viewer.clickandgo.cfd/*"
      ],
      "js": ["content_scripts/website_bridge.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "gmail-selectors.json" ],
      "matches": [ "https://mail.google.com/*" ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-48.png",
      "32": "icons/icon-48.png",
      "48": "icons/icon-48.png"
    }
  }
}