{
  "manifest_version": 3,
  "name": "TheChannel Viewer for Gmail",
  "version": "1.0.0",
  "description": "מאפשר צפיה באתרי הערוץ מתוך ג'ימייל",
  "host_permissions": [
    "https://mail.google.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "css": ["styles.css"],
      "js": [
        "js/state.js",
        "js/dom.js",
        "js/events.js",
        "js/main.js"
      ]
    }
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}